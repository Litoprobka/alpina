services:
  minecruft:
    image: itzg/minecraft-server:java17-alpine
    container_name: minecruft
    ports:
      - 25565:25565
      - 25565:25565/udp
      - 24454:24454/udp
      - 8100:8100
    restart: unless-stopped
    env_file: .env.minecruft
    volumes:
      - {{ base_volume_path }}/minecruft/data:/data
      - {{ base_volume_path }}/minecruft/downloads:/
      - {{ base_volume_path }}/minecruft/config:/config
