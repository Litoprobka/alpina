http:
  routers:
    sonarr:
      rule: "Host(`sonarr.{{ domain }}`)"
      service: sonarr
    radarr:
      rule: "Host(`radarr.{{ domain }}`)"
      service: radarr
  serversTransports:
    sonarrTransport:
      insecureSkipVerify: true
      forwardingTimeouts:
        dialTimeout: "180s"

  services:
    sonarr:
      loadBalancer:
        servers:
          - url: "http://sonarr.lab.home:8989"
        serversTransport: "sonarrTransport"
    radarr:
      loadBalancer:
        servers:
          - url: "http://radarr.lab.home:7878"
        serversTransport: "sonarrTransport"
